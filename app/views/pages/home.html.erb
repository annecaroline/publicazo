<div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">Publicazo</span> Pesquise pelos melhores serviços na sua cidade.</h1>
  </div>
</div>

<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Em que lugar está procurando um serviço?", class: "form-control", id: "autolocation" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Data Inicial", class: "form-control datepicker" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :end_date, params[:end_date], placeholder: "Data Final", class: "form-control datepicker" %>
    </div>
  </div>
  <br/><br/>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag "Pesquisar", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<br/><hr/><br/>

<!-- HOMES -->
<div><h3>Serviços</h3></div>
<br/>

<div class="row">
  <%= render partial: "services/services_list", locals: {services: @services} %>
</div>

