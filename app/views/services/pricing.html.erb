<div class="row">
  <div class="col-md-3">
    <%= render 'service_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Preço
      </div>

      <div class="panel-body">
        <div class="container">
        	<%= form_for @service do |f| %>
              	<div class="row">
	              	<div class="form-group">
	              		<label>Preço (R$)</label>
	              		<%= f.text_field :price, placeholder: "p.e: R$ 100,00", class: "form-control" %>
	              	</div>
	            </div>
	            <div class="text-center">
	            	<%= f.submit "Salvar", class: "btn btn-form" %>
	            </div>
            <% end %>        
        </div>
      </div>

    </div>
  </div>
</div>
